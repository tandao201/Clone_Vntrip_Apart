<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="custom_btn_login_others" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/custom_btn_login_other</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="edittextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="maxLines">1</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/edittext</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


</resources>