<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:background="@drawable/border_bottom_medium_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_logo_ariline"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/bamboo" />

        <TextView
            android:id="@+id/tv_view_detail"
            android:layout_alignParentRight="true"
            android:text="Chi tiết"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_timeGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:45"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/tv_timeGo"
            android:orientation="vertical"
            android:id="@+id/ln_totalTimeAndArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_right"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:textSize="9sp"
                android:text="2h15"
                android:layout_marginTop="3dp"
                android:id="@+id/tv_total_TimeFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_timeTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ln_totalTimeAndArrow"
            android:text="22:45"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_priceTicketFlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1.690.000đ"
            android:textStyle="bold"
            android:textColor="@color/green" />

    </RelativeLayout>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="7dp"
        android:id="@+id/tv_moreInfoTicket"
        android:text="VN7287 - Bay thẳng"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>