<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@color/white"
    android:id="@+id/ln_hotel_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="8dp"
        android:background="@drawable/border_bottom_ln_item"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imv_icon_hotel"
            android:src="@drawable/ic_location_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hotel_name"
                style="@style/tv_search_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách sạn Huyền 179"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hotel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hotel_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                android:text="29 Đường Bùi Thị Xuân, Phường 2, Thành phố Đà Lạt, Tỉnh Lâm Đồng" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>